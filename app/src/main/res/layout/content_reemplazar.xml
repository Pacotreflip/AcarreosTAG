<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_reemplazar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mx.grupohi.acarreostag.ReemplazarActivity"
    tools:showIn="@layout/app_bar_reemplazar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Seleccione las placas del camiÃ³n:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:id="@+id/mainTitle" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/spinnerCamiones" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCamion"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="18sp"
                android:paddingBottom="25dp" />

            <Button
                android:text="CAMBIAR TAG"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:id="@+id/buttonCambiarTag"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="24sp" />

            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@drawable/nfc_back"
                android:id="@+id/nfc_background"
                app:srcCompat="@drawable/nfc_back" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
                android:id="@+id/fabCancel"
                app:backgroundTint="@android:color/holo_red_dark"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:elevation="10dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
